<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/line1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_leftBra"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector"
            android:text="("
            android:textSize="55sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector"
            android:text="0"
            android:textSize="55sp" />

        <Button
            android:id="@+id/btn_rightBra"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=")"
            android:background="@drawable/selector"
            android:textSize="55sp"
            />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector_equal"
            android:text="="
            android:textColor="#DDF3F7F7"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/line1"
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_1"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector"
            android:text="1"
            android:textSize="55sp"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:layout_above="@+id/btn_0"
            android:layout_toRightOf="@id/btn_1"
            android:text="2"
            android:textSize="55sp"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:layout_above="@+id/btn_0"
            android:layout_toRightOf="@id/btn_2"
            android:text="3"
            android:textSize="55sp"
            />

        <Button
            android:id="@+id/btn_point"
            android:layout_width="89dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="55sp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_above="@id/line2"
        android:id="@+id/line3"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/btn_4"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@drawable/selector"
        android:text="4"
        android:textSize="55sp"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@drawable/selector"
        android:layout_toRightOf="@id/btn_4"
        android:text="5"
        android:textSize="55sp"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@drawable/selector"
        android:layout_toRightOf="@id/btn_5"
        android:text="6"
        android:textSize="55sp"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@drawable/selector"
        android:layout_toRightOf="@id/btn_6"
        android:text="+"
        android:textColor="#4CBBEC"
        android:textSize="55sp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/line3"
        android:id="@+id/line4"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_7"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="7"
            android:textSize="55sp"
            />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="8"
            android:textSize="55sp"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="89dp"
            android:background="@drawable/selector"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="9"
            android:textSize="55sp"
            />

        <Button
            android:id="@+id/btn_subtract"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="-"
            android:textColor="#4CBBEC"
            android:textSize="55sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_above="@id/line4"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_C"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="清空"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="/"
            android:textColor="#4CBBEC"
            android:textSize="55sp" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="*"
            android:textColor="#4CBBEC"
            android:textSize="55sp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_marginLeft="2dp"
            android:text="删除"
            android:textSize="20sp"
            />

    </LinearLayout>


